{% extends 'base_user.html.twig' %}

{% block title %}F.A.Q.{% endblock %}

{% block body %}
    <h1 class="text-center text-primary">F.A.Q.</h1>
    <section>
        <div>
            <div class="accordion" id="accordionFaq">
                {% for faq in faqs %}
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#collapse{{ faq.id }}" aria-expanded="true" aria-controls="collapse{{ faq.id }}">
                                    {{ faq.question }}
                                </button>
                            </h2>
                        </div>
                        <div id="collapse{{ faq.id }}" class="collapse" aria-labelledby="headingOne"
                             data-parent="#accordionFaq">
                            <div class="card-body">
                                {{ faq.answer }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

