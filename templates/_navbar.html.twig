<header class="w-100 {% if app.request.pathInfo == path('app_index') %}top-img {% else%}top-img-pages{% endif %} d-flex justify-content-center overflow-hidden">
    <div class="{% if app.request.pathInfo == path('app_index') %}img_bg_navbar {% else%}img_bg_navbar_pages{% endif %} position-absolute align-content-center overflow-hidden w-100">
        {%  if bgimage is defined %}
            <img src="{{ asset('build/'~ bgimage ) }}" alt="image de fond" class="min-vw-100">
        {% else %}
            <img src="{{ asset('build/header_sportif_lacets.jpg') }}" alt="image de fond" class="min-vw-100">
        {% endif %}
    </div>
    <div class="bluehover position-relative"></div>

    <div class="col-12 container-banner position-absolute ">
        {# debut bande supérieure (adresse => profil) #}
        <div class="px-0 supnavbar col-12 d-flex flex-column flex-md-row mt-3 mx-auto">
            <div class="px-0 col-md-6 infoheader d-flex flex-row">
                <div class="p-0 d-flex flex-row align-items-center text-light">
                    <img class="pictos mx-1 d-flex flex-row" src="{{ asset('build/blue_location.svg') }}" alt="picto_location">
                    {{ coachInfo.adress ?? '' }}, {{ coachInfo.zipCode ?? '' }} {{ (coachInfo.city ?? '')|upper }}
                </div>
                <div class="px-0 d-flex flex-row align-items-center">
                    <div class="ml-3 row align-items-center">
                        <img class="pictos mx-1" src="{{ asset('build/blue_tel.svg') }}" alt="picto_phone">
                        <p class="text-right my-0 text-light">{{ (coachInfo.phone ?? '')|formatPhoneFr }}</p>
                    </div>
                </div>
            </div>
