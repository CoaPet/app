                        </a>
                    </div>
                    <div class="flex-row align-items-center float-right ml-0">

                        {% if app.user %}
                            <a class=" text-light dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img class="pictos navbar-text" src="{{ asset('build/blue_connection.svg') }}"
                                     alt="Lien vers page de connexion">{{ app.user.firstname }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="dropdown-item text-primary" href="{{ path('app_admin') }}">Admin</a>
                                {% endif %}
                                <a class="dropdown-item text-primary" href="{{ path('profil_show') }}">Mon profil</a>

                                <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% else %}
                            <a href="{{ path('app_login') }}"
                               class="navbar-link text-light text-decoration-none">
                                <img class="pictos navbar-text" src="{{ asset('build/blue_connection.svg') }}"
                                     alt="Lien vers page de connexion">Connexion</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {# Fin bande supérieure#}
        <div class="line"></div>
        {# Debut bande inférieure (Logo + liens de navigation) #}
        <div class="bloc-bi d-flex flex-wrap justify-content-between px-0 mx-auto">
            <div class="px-0">
                <a class="navbar-brand" href="{{ path('app_index') }}">
                        <img src="{{ asset('build/peter_logo_white.png') }}" alt="logo coach Peter">
                </a>
            </div>
            <div class="text-right">
                <nav class="navbar navbar-expand-lg navbar-light border-top-0 justify-content-end">
                    <button class="navbar-toggler border-0 btn text-light align-right" type="button"
                            data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-list" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                    </button>
                    <div class="collapse navbar-collapse text-right justify-content-end" id="navbarNav">
                        <ul class="navbar-nav mr-0">

                            {% if is_granted('ROLE_MEMBER') %}
                                <li class="nav-item">
                                    <a class="text-light text-decoration-none {{ app.request.pathInfo==path('app_member') ? 'active navbar-focus' : 'navbar-link' }}" href="{{ path('app_member') }}">ESPACE
                                        MEMBRE</a>
                                </li>
                            {% endif %}

                            <li class="nav-item">
                                <a class="text-light text-decoration-none {{ app.request.pathInfo == path('whoiam_index') ? 'active navbar-focus' : 'navbar-link' }} p-0" href="{{ path('whoiam_index') }}">
                                    QUI SUIS-JE
                                    {% if app.request.pathInfo == path('whoiam_index') %}
                                        <span class="sr-only">(current)</span>
                                    {% endif %}
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="text-light text-decoration-none {{ app.request.pathInfo == path('transformations') ? 'active navbar-focus' : 'navbar-link' }}" href="{{ path('transformations') }}">
                                    TRANSFORMATIONS
                                    {% if app.request.pathInfo == path('transformations') %}
                                        <span class="sr-only">(current)</span>
                                    {% endif %}
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="text-light text-decoration-none {{ app.request.pathInfo == path('app_actuality') ? 'active navbar-focus' : 'navbar-link' }}" href="{{ path('app_actuality') }}">
                                    ACTUALITÉS
                                    {% if app.request.pathInfo == path('app_actuality') %}
                                        <span class="sr-only">(current)</span>
                                    {% endif %}
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="text-light text-decoration-none {{ app.request.pathInfo == path('app_contact') ? 'active navbar-focus' : 'navbar-link' }}" href="{{ path('app_contact') }}">
                                    CONTACT
                                    {% if app.request.pathInfo == path('app_contact') %}
                                        <span class="sr-only">(current)</span>
                                    {% endif %}
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        {# Fin bande inférieure#}
        {% include '_flash.html.twig' %}
        {% include '_headband.html.twig' %}
    </div>
</header>
