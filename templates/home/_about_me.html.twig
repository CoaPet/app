
<section class="about-me-home pt-2 pb-4">
    <div class="">
        <h2 class="text-center mb-5 text-primary"><span class="main-font-light">
                À PROPOS</span> <span class="main-font-bold">DE MOI</span>
        </h2>
        <div class="row w-100 mx-0">
            <div class="col-md-6 mx-0">
                {% if coachInfo %}
                <img class="w-100" src="{{ vich_uploader_asset(coachInfo, 'imageFile') }}"
                     alt="Coach Peter">
                {% endif %}
            </div>
            <div class="col-md-6 mx-0">
                <h3 class="coach-name-about-me font-weight-bold">
                    <span class="text-primary main-font-black semi-large-font-size">PETER DIONISIO</span>
                </h3>
                <p class="catchline font-italic caption-font medium-20-font-size">
                    "{{ (coachInfo.catchline ?? '')|raw }}"
                </p>
                <div>
                    <ul class="nav mt-3" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active text-primary" id="home-tab" data-toggle="tab"
                               href="#home" role="tab" aria-controls="home" aria-selected="true">
                                Présentation
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Ma Philosophie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary" id="contact-tab" data-toggle="tab" href="#contact" role="tab"
                               aria-controls="contact" aria-selected="false">Mes Qualités</a>
                        </li>
                    </ul>
                </div>
                <div class="text tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        {{ (coachInfo.presentation ?? '')|raw }}
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        {{ (coachInfo.philosophy ?? '')|raw }}
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        {{ (coachInfo.quality ?? '')|raw }}
                    </div>
                    <div class="text-left">
                        <a href="{{ path('app_contact') }}"
                           class="contact btn nav-font-semi-bold small-14-font-size btn border-primary">
                            ME CONTACTER
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
