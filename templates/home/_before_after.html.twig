<section id="before_after" class="before_after">
    <!-- Titre de section -->
    <div class="pt-2">
        <h2 class="text-light w-100 text-center">ILS ONT <span class="font-weight-bold">RÉUSSI</span> !</h2>
    </div>
    <!-- Carousel -->
    <div class="col-sm-10 offset-sm-1">
        <div id="carouselExampleControls" class="w-100 carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for transformation in transformations %}
                    {% if loop.index is odd %}
                    <div class="w-100 carousel-item {% if loop.index == 1 %}active{% endif %}">
                    <div class="picture_duo row mx-sm-5 px-md-5">
                    {% endif %}
                    <div class="d-flex align-items-center col-6 col-md-5 {% if loop.index is even %}offset-1 offset-md-0{% endif %}">
                        <div class="position-relative pt-md-5 offset-1 col-md-6 offset-md-3">
                            <div class="first_image position-relative bg-light col-md-12 p-2">
                                <div class="polaroid_img w-100 m-auto">
                                    <img class="w-100" src="{{ vich_uploader_asset(transformation, 'pictureBeforeFile') }}" alt="{{ transformation.name }} avant">
                                </div>
                                <div class="polaroid_label text-center text-primary">
                                    {{ transformation.name }}
                                </div>
                            </div>
                            <div class="second_image position-absolute bg-light col-md-11 p-2">
                                <div class="polaroid_img w-100">
                                    <img class="w-100" src="{{ vich_uploader_asset(transformation, 'pictureAfterFile') }}" alt="{{ transformation.name }} après">
                                </div>
                                <div class="polaroid_label text-center text-secondary">
                                    -{{ transformation.pound }} Kg
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if loop.index is even %}
                        </div>
                        </div>
                    {% endif %}

                {% endfor %}
            </div>
            <!-- Les contrôles < & > -->
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="h-25 col-md-3 col-sm-1 carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="h-25 col-md-3 col-sm-1 carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- Btn lien vers page -->
    <div class="pt-1 text-center w-100">
        <a class="btn btn-light" href="#">VOIR LES TRANSFORMATIONS</a>
    </div>
</section>
