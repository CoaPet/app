{{ form_start(form) }}

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.name, "Nom de la ressource") }}
        <div class="text-danger">
            {{ form_errors(form.name) }}
        </div>
    </div>
    {{ form_widget(form.name) }}
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.type, "Type de la ressource") }}
        <div class="text-danger">
            {{ form_errors(form.type) }}
        </div>
    </div>
    {{ form_widget(form.type) }}
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.theme, "Thème de la ressource") }}
        <div class="text-danger">
            {{ form_errors(form.theme) }}
        </div>
    </div>
    {{ form_widget(form.theme) }}
</div>

<div class="text-center w-100">
    <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalCenter">
        Ajouter un nouveau thème
    </button>
</div>


<div class="row w-50 m-auto text-center">
    <div class="form-group col-5 text-primary text-center">
        <div class="h5">
            {{ form_label(form.refVideo, "Référence de la vidéo externe") }}
            <div class="text-danger">
                {{ form_errors(form.refVideo) }}
            </div>
        </div>
    {{ form_widget(form.refVideo) }}
    </div>
    <div class="align-middle col-2">
        OU
    </div>
    <div class="form-group col-5 text-primary text-center">
        <div class="h5">
            {{ form_label(form.fileFile, "Fichier à télécharger") }}
            <div class="text-danger">
                {{ form_errors(form.fileFile) }}
            </div>
        </div>
        {{ form_widget(form.fileFile) }}
    </div>
</div>

<div class="w-100 text-center">
    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>

{{ form_end(form) }}

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Créer un nouveau thème</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% include 'admin_theme/new.html.twig' %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
