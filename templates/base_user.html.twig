{% extends 'base.html.twig' %}

{% block meta %}
{% endblock %}

{% block title %}
    Coach Peter
{% endblock %}
{% block head %}
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default" defer></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDdwjtPjzfJF8vjWI2KR6RM8mWQRotP8WU&callback=initMap&libraries=&v=weekly"
            defer
    ></script>
    <style type="text/css">
        /* Always set the map height explicitly to define the size of the div
         * element that contains the map. */
        #map {
            filter: grayscale(90%) blur(0.1px);
            height: 400px;
        }

    </style>
    <script>
        "use strict";
        let map;

        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: {
                    lat: 47.892862,
                    lng: 1.900613
                },
                styles: [
                    {
                        featureType: 'landscape',
                        "stylers": [
                            { 'color': '#FDFFFD' }
                        ]
                    },
                    {
                        featureType: 'road',
                        "stylers": [
                            { 'color': '#DDFFDD' }
                        ]
                    }
                ],
                mapTypeControl: false,
                streetViewControl: false,
                zoom: 15
            });
        }
    </script>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block navbar %}
    {% include '_navbar.html.twig' %}
{% endblock %}

{% block body %}

{% endblock %}

{% block footer %}
    {% include '_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
