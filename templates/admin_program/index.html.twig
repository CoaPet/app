{% extends 'base_admin.html.twig' %}

{% block title %}Les programmes{% endblock %}

{% block body %}
    <h1 class="text-center text-primary my-5">Programmes</h1>
    <div class="w-75 m-auto text-right">
        <a class="btn btn-light text-primary border-primary my-4" href="{{ path('program_new') }}">
            Ajouter
            <svg class="bi bi-plus-circle-fill" width="24px" height="24px" viewBox="0 0 16 16" fill="#00384f" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4a.5.5 0 0 0-1 0v3.5H4a.5.5 0 0 0 0 1h3.5V12a.5.5 0 0 0 1 0V8.5H12a.5.5 0 0 0 0-1H8.5V4z"/>
            </svg>
        </a>
    </div>
    {% for program in programs %}
    <table class="mt-3 table table-striped w-75 text-center mx-auto table-hover table-borderless">
        <thead>
            <tr class="bg-primary text-light text-center">
                <th class="col-7">Programme</th>
                <th class="col-2">Durée d'accès</th>
                <th class="col-1"></th>
                <th class="col-1"></th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="align-middle">{{ program.name }}</td>
                <td class="align-middle">{{ program.duration }}</td>
                <td class="align-middle">
                    <a class="btn text-primary mx-2 col-6" href="{{ path('program_edit', {'id': program.id}) }}">
                        <svg class="bi bi-pencil-square" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                    </a>
                </td>
                <td>
                    {{ include ('admin_program/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
        <h3 class="mt-2 w-75 mx-auto mb-1 text-left text-primary">
            Les étapes
        <a href="{{ path('program_step_new', {'id': program.id}) }}">
        <svg class="bi bi-plus-circle-fill" width="24px" height="24px" viewBox="0 0 16 16" fill="#00384f" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4a.5.5 0 0 0-1 0v3.5H4a.5.5 0 0 0 0 1h3.5V12a.5.5 0 0 0 1 0V8.5H12a.5.5 0 0 0 0-1H8.5V4z"/>
        </svg>
        </a>
        </h3>
            {% for program_step in program.programSteps %}
                <div class="w-75 m-auto accordion pt-2" id="accordionProgramStep">
                        <div class="card w-50">
                            <div class="card-header" id="headingOne">
                                <div class="mb-0 row w-100">
                                    <div class="col-10 align-middle">
                                        <h2 class="btn mb-0 accordion-programStep text-left text-primary" type="button" data-toggle="collapse"
                                            data-target="#collapse{{ program_step.id }}" aria-expanded="false" aria-controls="collapse{{ program_step.id }}">
                                            {{ program_step.title }}
                                        </h2>
                                    </div>
                                    <div class="col-1 my-auto text-center">
                                        <a href="{{ path('program_step_edit', {'id': program_step.id}) }}">
                                            <svg class=" my-auto bi bi-pencil-square" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                            </svg>
                                        </a>
                                    </div>
                                    <div class="col-1 align-middle text-center">
                                    {%  include 'admin_program_step/_delete_form.html.twig' %}
                                    </div>
                                </div>
                            </div>
                            <div id="collapse{{ program_step.id }}" class="collapse" aria-labelledby="headingOne"
                                 data-parent="#accordionProgramStep">
                                <div class="answer card-body pl-5">
                                    <div class="text-center ow border-bottom border-primary mb-2 pb-1 w-100">
                                        <a class="btn btn-light border-primary" href="{{ path('ressource_new', {'id': program_step.id}) }}">
                                            <svg class="bi bi-plus-circle-fill" width="24px" height="24px" viewBox="0 0 16 16" fill="#00384f" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4a.5.5 0 0 0-1 0v3.5H4a.5.5 0 0 0 0 1h3.5V12a.5.5 0 0 0 1 0V8.5H12a.5.5 0 0 0 0-1H8.5V4z"/>
                                            </svg>
                                            Ajout
                                        </a>
                                    </div>
                                    {% for ressource in program_step.ressources %}
                                    <div class="row border-bottom border-primary mb-2 pb-1 w-100">
                                        <div class="my-auto align-middle col-10 text-primary">
                                            <p class="border-primary">
                                                "{{ ressource.theme.nameTheme }}"
                                            </p>
                                            <p class="pl-3">
                                            {% if ressource.type == 'pdf' %}
                                            <svg height="2em" width="2em" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                                <path d="m451.7 99.72-71.4-71.44c-15.6-15.55-46.3-28.28-68.3-28.28h-240c-22 0-40 18-40 40v432c0 22 18 40 40 40h368c22 0 40-18 40-40v-304c0-22-12.7-52.7-28.3-68.28z"/>
