{% extends 'base_admin.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
    <h1 class="text-primary text-center">Actualités</h1>
    <div class="m-2 mb-4 mr-4 text-right">
        <a class="btn btn-light border-primary float-left mx-2" href="">Retour</a>
        <a class="btn btn-primary mx-2" href="{{ path('actuality_new') }}">Nouveau</a>
    </div>
    <table class="table w-75 text-center m-auto table-hover">
        <thead class="bg-primary text-light">
            <tr class="row mx-0">
                <th class="col-3">Titre</th>
                <th class="col-2">Date</th>
                <th class="col-2">Thème</th>
                <th class="col-3">Aperçu</th>
                <th class="col-2"></th>
            </tr>
        </thead>
        <tbody>
        {% for actuality in actualities %}
            <tr class="d-flex">
                <td class="col-3">{{ actuality.title }}</td>
                <td class="col-2">{{ actuality.date ? actuality.date|date('d-m-Y') : '' }}</td>
                <td class="col-2">{{ actuality.theme }}</td>
                <td class="col-3"><img class="w-50" src="uploads/{{ actuality.picture }}" alt="{{ actuality.title }}"></td>
                <td class="col-2">
                    <a class=" mr-4" href="{{ path('actuality_edit', {'id': actuality.id}) }}"><svg class="bi bi-pencil-square" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg></a>
                    <a  href=""><svg class="bi bi-trash" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
