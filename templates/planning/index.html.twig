{% extends 'base.html.twig' %}

{% block title %}Planning index{% endblock %}

{% block body %}
    <h1>Planning index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>Hour</th>
                <th>Duration</th>
                <th>Activity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td>{{ planning.id }}</td>
                <td>{{ planning.day }}</td>
                <td>{{ planning.hour }}</td>
                <td>{{ planning.duration }}</td>
                <td>{{ planning.activity }}</td>
                <td>
                    <a href="{{ path('planning_show', {'id': planning.id}) }}">show</a>
                    <a href="{{ path('planning_edit', {'id': planning.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('planning_new') }}">Create new</a>
{% endblock %}
