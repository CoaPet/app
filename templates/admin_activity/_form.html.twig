{{ form_start(form) }}
<div class="form-group d-flex flex-column align-items-center col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.category, 'Catégorie') }}
        <div class="text-danger">
            {{ form_errors(form.category) }}
        </div>
    </div>
    {{ form_widget(form.category) }}
    <div class="col-8 mt-3 ">
        <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalCenter">
            Ajouter une nouvelle catégorie
        </button>
    </div>
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.title, 'Titre') }}
        <div class="text-danger">
            {{ form_errors(form.title) }}
        </div>
    </div>
    {{ form_widget(form.title) }}
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.description) }}
        <div class="text-danger">
            {{ form_errors(form.description) }}
        </div>
    </div>
    {{ form_widget(form.description) }}
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.pictogram, 'Pictogramme') }}
        <div class="text-danger">
            {{ form_errors(form.pictogram) }}
        </div>
    </div>
    {{ form_widget(form.pictogram) }}
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.activityFile, 'Image') }}
        <div class="text-danger">
            {{ form_errors(form.activityFile) }}
        </div>
    </div>
    {{ form_widget(form.activityFile) }}
</div>

<div class="form-group col-4 offset-4 text-primary text-center">
    <div class="h5">
        {{ form_label(form.focus, 'Cocher pour placer en page d\'accueil') }}
        <div class="text-danger">
            {{ form_errors(form.focus) }}
        </div>
    </div>
    {{ form_widget(form.focus) }}
</div>

<div class="form-inline justify-content-center">
    <button class="btn btn-primary m-2">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}



<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Créer une nouvelle catégorie d'activité</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% include 'coaching_category/new.html.twig' %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
