{#script pour afficher les champs en fonction du type d'activité, tous n'étend pas nécessaires#}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var activity = document.getElementById('form_activity').activity_category.value;
    $('.change').addClass('d-none');
    $('.'+activity).removeClass('d-none');

    document.getElementById('form_activity').activity_category.onchange = function() {
        var activity = this.value;
        $('.change').addClass('d-none');
        $('.'+activity).removeClass('d-none');
    };
</script>
