{{ form_start(form) }}
<div class="form-group col-6 offset-3 text-primary text-center">
    <div class="form-group col-4 offset-4 text-primary text-center">
        <div class="h5">
            {{ form_label(form.user) }}
            <div class="text-danger">
                {{ form_errors(form.user) }}
            </div>
        </div>
        {{ form_widget(form.user) }}
    </div>
    <div class="form-group col-4 offset-4 text-primary text-center">
        <div class="h5">
            {{ form_label(form.program) }}
            <div class="text-danger">
                {{ form_errors(form.program) }}
            </div>
        </div>
        {{ form_widget(form.program) }}
    </div>
    <div class="form-group col-4 offset-4 text-primary text-center">
        <div class="h5">
            {{ form_label(form.beginDate) }}
            <div class="text-danger">
                {{ form_errors(form.beginDate) }}
            </div>
        </div>
        {{ form_widget(form.beginDate) }}
    </div>
    <div class="form-group col-4 offset-4 text-primary text-center">
        <div class="h5">
            {{ form_label(form.endDate) }}
            <div class="text-danger">
                {{ form_errors(form.endDate) }}
            </div>
        </div>
        {{ form_widget(form.endDate) }}
    </div>
</div>

<div class="form-inline justify-content-center">
    <button class="btn btn-primary m-2">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
